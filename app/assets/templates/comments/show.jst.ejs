<li data-id="<%= comment.id %>">
	<img src="<%= url %>">
	<span style="padding-left:30px">
		<a href="/users/<%= comment.answerer.id %>"><%= comment.answerer.username %></a>
	</span>

	<span class='votes_count'>
		<%= comment.votes.length + " " + owl.pluralize("vote", comment.votes.length) %>
	</span><br />

	<%= comment.body %>
	<a href="/comments/<%= comment.id %>" class="delete_comment" data-remote="true" data-method="delete">
		Delete Comment
	</a><br /><br />

	<div class="vote">
		<form action="/votes" data-remote="true" class="upvote" method="POST">
			<input type="hidden" value="<%= comment.id %>" name="vote[answer_id]">
			<input type="hidden" value="<%= voter.id %>" name="vote[voter_id]">
			<input type="submit" value="Upvote">
		</form>

		<form action="/votes" data-remote="true" class="downvote" method="POST">
			<input type="hidden" name="_method" value="delete">
			<input type="hidden" value="<%= comment.id %>" name="vote[answer_id]">
			<input type="hidden" value="<%= voter.id %>" name="vote[voter_id]">
			<input type="submit" value="Unvote">
		</form>
	</div>

	<ul class="child_comments"></ul>

	<a href="#" class="new_reply" id="<%= comment.id %>">Reply</a>
	<hr width="80%">

	<form action="/comments" method="POST" class="child_comment_area_<%= comment.id %> hidden" data-remote="true">
		<input type="text" name=comment[body]>
		<input type="hidden" value=<%= comment.question_id %> name="comment[question_id]">
		<input type="hidden" value=<%= comment.id %> name="comment[parent_comment_id]">

		<div id="leave_reply"><input type="submit" value="Comment"></div>
	</form>
</li>

