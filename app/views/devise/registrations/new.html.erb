<div class="span3 well">
	<legend>New to Quora Clone? Sign up!</legend>
	<%= form_for(resource,
		:as => resource_name,
		:url => registration_path(resource_name),
		:html => { :multipart => true }) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label :username %><br />
		  <%= f.text_field :username, :autofocus => true, :class => "span3" %></div>

		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, :class => "span3" %></div>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password, :class => "span3" %></div>

		  <div><%= f.label :password_confirmation %><br />
		  <%= f.password_field :password_confirmation, :class => "span3" %></div>

			<div><%= f.label :profile_picture %><br />
			<%= f.file_field :profile_picture, :class => "span3" %></div><br />

			<div><%= f.submit "Sign Up", :class => "btn btn-warning" %>
		<% end %>
</div>
