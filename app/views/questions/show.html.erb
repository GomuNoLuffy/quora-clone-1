<%= form_for @rel,
	:remote => true,
	:html => { :class => current_user.followed_questions.include?(@question) ? "follow_question hidden" : "follow_question"} do |f| %>
	<%= f.hidden_field :question_id, :value => @question.id %>
	<%= f.submit "Follow Question" %>
<% end %>

<%= form_for @rel,
	:remote => true,
	:html => { :class => current_user.followed_questions.include?(@question) ? "unfollow_question" : "unfollow_question hidden",
	:method => :delete } do |f| %>
	<%= f.hidden_field :question_id, :value => @question.id %>
	<%= f.submit "Unfollow Question" %>
<% end %>

<% @question.topics.each do |topic| %>
	<span class="label label-inverse">
		<%= link_to topic.name, topic_url(topic) %>
		<%= link_to raw('<i class="icon-remove"></i>'),
			question_topic_relationship_url(:question_id => @question.id, :topic_id => topic.id),
			:method => :delete,
			:remote => true,
			:class => "remove_topic_tag" %>
	</span>
<% end %>

<%#= form_for :question_topic_relationship,
	:html => { :class => "add_question_topic" },
	:remote => true do |f| %>
	<%#= f.hidden_field :question_id, :value => @question.id %><br />
	<%#= f.text_field :topic_id %>
	<%#= f.submit "Add Topic" %>
<%# end %>

<h3><%= @question.title %></h3>

<p><%= @question.body %></p>

<a class="get_comment_area">Leave a Comment</a>

<hr width="80%">
<p><span id="answers_count"><%= pluralize(@answers.count, 'Answer')%></span></p>
<hr width="80%">

<div class="comment_area hidden">
	<%= link_to current_user.username, user_url(current_user) %><br />

	<%= form_for @comment, html: { class: "new_comment hidden" }, :remote => true do |f| %>
		<%= f.text_area(:body, rows: 3) %><br />
		<%= f.hidden_field(:question_id, :value => @question.id) %>

		<%= f.submit "Answer" %>
	<% end %>
	<hr width="80%">
</div>

<ul id="answers">
	<% @answers.each do |answer| %>
		<%= render :partial => "comments/nested_answer",
			:locals => { :answer => answer, :comment => @comment, :vote => @vote }%>
	<% end %>
</ul>

<script type="application/json" id="current_user_id">
	<%= current_user.to_json.html_safe %>
</script>

<script type="application/json" id="current_user_avatar">
	<%= current_user.profile_picture.url(:small).to_json.html_safe %>
</script>

<script>
	removeTopicTag();
	toggleFollowButton();
	leaveComment();
	getCommentArea();
	deleteComment();
	toggleVote();
	toggleReplyBox();
</script>
