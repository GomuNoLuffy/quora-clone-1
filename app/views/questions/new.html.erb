<h3>Add Question</h3>
<hr>
<%= form_for @question do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :body %>
	<%= f.text_field :body %><br />

	<%= f.label :topic_tokens, "Topics" %>
	<%= f.text_field :topic_tokens,
		"data-pre" => @question.topics.map(&:attributes).to_json,
		:id => "question_topic_tokens" %><br />


	<%= f.submit "Add Question"%>
<% end %>

<script>
$(function(){
	$("#question_topic_tokens").tokenInput("/topics.json", {
		crossDomain: false,
		prePopulate: $("#question_topic_tokens").data("pre"),
		theme: "facebook"
	});
});
</script>