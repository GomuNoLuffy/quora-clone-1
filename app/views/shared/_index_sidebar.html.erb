<div id="index_sidebar">
	<hr>
	<strong><%= link_to "Ask a Question", new_question_url, :id => 'create_question' %></strong><br />
	<strong><%= link_to "Unanswered Questions", unanswered_questions_url%></strong>
	<hr>
	<h5>Trending Topics</h5>
	<% Topic.trending_topics[0..5].each do |topic| %>
		<strong><%= link_to topic.name, topic_url(topic) %></strong><br />
	<% end %>
	<hr>
	<h5>Review</h5>
	<strong><%= link_to "All Questions", questions_url %></strong>
	<hr>
	<div class="fb-like" data-href="http://dominic-wong-quora-clone.herokuapp.com/" data-send="true" data-layout="button_count" data-width="50" data-show-faces="true"></div>
	<br /><br />
	<a href="https://twitter.com/share" class="twitter-share-button" data-url="http://dominic-wong-quora-clone.herokuapp.com/" data-via="dominicwong617">
		Tweet
	</a>
	<br /><br />
	<div class="g-plus" data-action="share" data-annotation="bubble" data-href="http://dominic-wong-quora-clone.herokuapp.com/"></div>
</div>

