<% if activities %>
	<% activities.each do |activity| %>
			<% if activity.owner.is_a?(User) && activity.trackable %>
		  	<div class="activity">
					<%= link_to activity.owner.username, activity.owner if activity.owner %>
			    <%= render_activity activity %>
				</div>
				<hr width="60%">
			<% elsif activity.owner.is_a?(Question) && activity.trackable %>
	  		<div class="activity">
					Question <%= link_to activity.owner.title, activity.owner if activity.owner %>
					<%= render_activity activity %>
				</div>
				<hr width="60%">
			<% end %>
	<% end %>
<% end %>
